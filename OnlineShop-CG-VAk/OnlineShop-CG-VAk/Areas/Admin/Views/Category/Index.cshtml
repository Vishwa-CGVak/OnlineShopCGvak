@model IEnumerable<Category>


<div class =" container">

    <div class ="row mt-4 mb-2">
        <div class ="col-md-6">

           <h2>Categories Dashboard</h2>   
        </div>

        <div class ="col-md-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i>  Create Category</a>
        </div>

    </div>

    <partial name = "_Notification" />

    <table class="table table-hover rounded rounded-3">   
        <thead>
            <tr>
                <th>Sl.No</th>
                <th>Name</th>
                <th>Order of display</th>
                <th>Action</th>          
            </tr>
        </thead>
        <tbody>
            @foreach(var category in Model.Select((value,index)=>new {index, value}))
            {
             <tr>
                <td>@(category.index+1)</td>
                <td>@category.value.Name</td>
                <td>@category.value.OrderOfDisplay</td>
                <td>
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.value.Id" class="btn btn-sm btn-secondary"><i class="bi bi-pencil-square"></i></a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.value.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash3"></i></a>
                </td>
            </tr>
            }

        </tbody>
    </table>
</div>
