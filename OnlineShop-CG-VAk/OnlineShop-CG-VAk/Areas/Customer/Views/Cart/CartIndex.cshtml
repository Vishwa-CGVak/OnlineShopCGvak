@model ShoppingCartVm

<form method="post">
<br />
<div class="container">
    <div class="card">
        <div class="card-header bg-dark text-light ml=0">
            <div class="row">
                <div class="col-6 pt-2">
                    <i class="fa fa-shopping-cart"></i> &nbsp;
                    Shopping Cart
                </div>
                <div class="col-6 text-end">
                    <a  asp-controller="Home" asp-action="Index" class="btn btn-outline-info"></a>
                </div>
            </div>
        </div>

        <div class="card-body">
            @foreach(var item in Model.ListCart)
            {
                <div class="row">
                    <div class="col-3 py-2">
                        <img src="@item.product.ImageUrl" class="rounded"/>
                        </div>
                    <div class="col-4">
                        <h5><strong>@item.product.Title</strong></h5>
                        <p><small>@Html.Raw(item.product.Description)</small></p>
                     </div>

                     <div class="col-12 col-lg-5 text-end row">
                         <div class="col-4 text-md-end">
                             <h6><strong>@item.product.Price.ToString("c")<span class="text-muted">&nbsp;&nbsp;*
                             </span>@item.Count</strong></h6>
                         </div>
                    </div>
              </div>
            }
        </div>
    </div>
            <div class="row">
                         <div class="col-9 text-md-end">
                             <span><strong>total: @Model.OrderHeader.OrderTotal.ToString("c")</strong></span>
                         </div>
          </div>
     <div class="card-footer">
            <div class="row">
              
                <div class="col-12 col-md-4 ms-auto">
                    <button  asp-action="Summary" class="btn btn-primary form-control ">Summary</button>
                </div>
            </div>
</div>
</div>
</form>