@model ShoppingCart
<form method="post">
    <input hidden asp-for="ProductId"/>
    <div class="card container pt-4">
        <div class="card-header bg-primary text-light m-lg-0 row">
            <div class="col-12">
                <h1 class="text-white">@Model.product.Title</h1>
               
            </div>
        </div>
        <div class="card-body row container">
            <div class="container rounded p-2">
                <div class="row">
                    <div class="col-8 col-lg-8">
                    <div class="row pl-2">
                        <h5 class="text-muted">Model No: @Model.product.ISBN</h5>
                    </div>
                    <div class="row pl-2">
                        <h5 class="text-muted pb-2">List price: <strike>@Model.product.ListPrice.ToString("c")</strike></h5>
                    </div>
                    <div class="row text-dark text-center pl-2">
                        <div class="p-1 col-2 bg-secondary border-bottom">
                            <div>Quantity</div>
                        </div>
                        <div class="p-1 col-2 bg-secondary border-bottom">
                            <div>1-50</div>
                        </div>
                        <div class="p-1 col-2 bg-secondary border-bottom">
                            <div>51-100</div>
                        </div>
                        <div class="p-1 col-2 bg-secondary border-bottom">
                            <div>100+</div>
                        </div>
                    </div>
                    <div class="row text-center p-lg-2" style="color:maroon" ; font-weight:bold>
                        <div class="p-1 col-2 bg-secondary">
                            <div>Price</div>
                        </div>
                        <div class="p-1 col-2 bg-secondary">
                            <div>@Model.product.Price.ToString("c")</div>
                        </div>
                        <div class="p-1 col-2 bg-secondary">
                            <div>@Model.product.Price50.ToString("c")</div>
                        </div>
                        <div class="p-1 col-2 bg-secondary">
                            <div>@Model.product.Price100.ToString("c")</div>
                        </div>
                    </div>
                    <div class="row pl-2">
                        <h3>Discription </h3>
                        <p class="text-secondary">@Html.Raw(Model.product.Description)</p>
                    </div>
                    <div class="row pl-2">
                        <div class="col-2 text-primary"><h4>Count</h4></div>
                        <div class="col-6"><input asp-for="Count" class="form-control" /></div>
                    </div>
                </div>
                       <div class="col-4 col-lg-3 offset-lg-1 text-center mt-2">
                    <img src="~/Images/Products/@Model.product.ImageUrl" class="p-2" style="width: 100%; border: 1px solid gray; border-radius: 10px" />
                </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <div class="row">
            <div class="col-12 col-md-6 pb-1">
                <a class="btn btn-success form-control" asp-action="Index">Back to Home</a>
            </div>
            <div class="col-12 col-md-6 pb-1">
                <button type="submit" value="Add to Cart" class="btn btn-primary form-control">Add to cart</button>
            </div>
        </div>
    </div>

</form>
@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
    }